pipeline{
    agent any
    stages {
        stage("Build"){
            steps {
                dir("hdfctest"){
                    sh "mvn -B -DskipTests clean package"
                }
            }
        }
        stage("Clone Repo"){
            steps {
                sh "git clone https://github.com/MGod007/hdfctest.git"
            }
        }
        stage("Test"){
            steps{
                dir("hdfctest"){
                    sh "mvn test"
                }
            }
        }
        stage("Deliver"){
            steps{
                sh "./jenkins/scripts/deliver.sh"
            }
        }
    }
}
